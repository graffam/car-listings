<!DOCTYPE html>
<html>
<head>
  <title>CarListings</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Car Listings</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="left">
        <li><%= link_to 'New Car', new_car_path %></li>
        <li><%= link_to 'New Manufacturer', new_manufacturer_path %></li>
      </ul>
      <ul class="right">
          <li><%= link_to 'Cars', cars_path %></li>
          <li><%= link_to 'Manufacturers', manufacturers_path %></li>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
  <% end %>
  <%= yield :extra_footer %>
</body>
</html>
